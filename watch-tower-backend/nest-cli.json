{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/watch-tower-backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/watch-tower-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/watch-tower-backend",
  "projects": {
    "audit-service": {
      "type": "application",
      "root": "apps/audit-service",
      "entryFile": "main",
      "sourceRoot": "apps/audit-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/audit-service/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "risk-service": {
      "type": "application",
      "root": "apps/risk-service",
      "entryFile": "main",
      "sourceRoot": "apps/risk-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/risk-service/tsconfig.app.json"
      }
    },
    "user-service": {
      "type": "application",
      "root": "apps/user-service",
      "entryFile": "main",
      "sourceRoot": "apps/user-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-service/tsconfig.app.json"
      }
    },
    "watch-tower-backend": {
      "type": "application",
      "root": "apps/watch-tower-backend",
      "entryFile": "main",
      "sourceRoot": "apps/watch-tower-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/watch-tower-backend/tsconfig.app.json"
      }
    }
  }
}